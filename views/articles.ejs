<!DOCTYPE html>
<html>
<head>
  <title>Articles</title>
  <style>
    body {
      font-family: Arial, sans-serif;
    }
    .article {
      border: 1px solid #ddd;
      margin: 10px 0;
      padding: 10px;
      border-radius: 5px;
    }
    .article-title {
      font-size: 1.5em;
      font-weight: bold;
    }
    .article-content {
      margin: 10px 0;
    }
    .article-author {
      font-size: 0.9em;
      color: #555;
    }
  </style>
</head>
<body>
  <h1>Articles</h1>
  <% articles.forEach(article => { %>
    <div class="article">
      <div class="article-title"><%= article.title %></div>
      <div class="article-content"><%= article.content %></div>
      <div class="article-author">By: <%= article.user.name %> (<%= article.user.email %>)</div>
    </div>
  <% }) %>
</body>
</html>
